            <h4>@Html.Label("Huawei Watch Fit")</h4>
            <h4>@Html.Label("702 TRY")</h4>
            <a href="@Url.Action("Cart","Cart")"><i class="glyphicon glyphicon-shopping-cart"></i></a>
        </th>
        <th>
            <img src="~/Images/huaweiwatchgt2.jpg" style="width:200px;height:200px"
                 alt="img 6" />
            <h4>@Html.Label("Huawei Watch GT2")</h4>
            <h4>@Html.Label("1225 TRY")</h4>
            <a href="@Url.Action("Cart","Cart")"><i class="glyphicon glyphicon-shopping-cart"></i></a>
        </th>
    </tr>
</table>

<table cellpadding="2" cellspacing="2" border="1">
    @foreach (Product product in ViewBag.products)
    {
        <tr>
            <th>Id</th>
            <th>Image</th>
            <th>Name</th>
            <th>Price</th>
            <th>Add To Cart</th>
        </tr>
        <tr>
            <td>@product.ProductId</td>
            <td><img src="~/Images/@product.ProImage" width="60" /> </td>
            <td>@product.ProductName</td>
            <td>@product.Price</td>
            <td align="center">
                <a href="@Url.Action("Cart", "Cart", new { id = product.ProductId })">Add To Cart</a>
            </td>
        </tr>
    }
</table>
