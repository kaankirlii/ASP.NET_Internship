        </th>

        <th>
            <img src="~/Images/hp245g8.jpg" style="width:200px;height:200px"
                 alt="img 2" />
            <h4>@Html.Label("HP 245 G8 AMD Ryzen 3")</h4>
            <h4>@Html.Label("3600 TRY")</h4>
            <a href="@Url.Action("Cart","Cart")"><i class="glyphicon glyphicon-shopping-cart"></i></a>
        </th>
        <th>
            <img src="~/Images/oppoa73.jpg" style="width:200px;height:200px"
                 alt="img 3" />
            <h4>@Html.Label("Oppo A73")</h4>
            <h4>@Html.Label("2660 TRY")</h4>
            <a href="@Url.Action("Cart","Cart")"><i class="glyphicon glyphicon-shopping-cart"></i></a>
        </th>
    </tr>
</table>
<table class="table-bordered">
    <tr>
        <th>
            <img src="~/Images/samsunggalaxym12.jpg" style="width:200px;height:200px"
                 alt="img 4" />
            <h4>@Html.Label("Samsung Galaxy M12")</h4>
            <h4>@Html.Label("2500 TRY")</h4>
            <a href="@Url.Action("Cart","Cart")"><i class="glyphicon glyphicon-shopping-cart"></i></a>
        </th>
        <th>
            <img src="~/Images/huaweiwatchfit.jpg" style="width:200px;height:200px"
